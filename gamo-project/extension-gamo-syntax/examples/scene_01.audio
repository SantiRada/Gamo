soundbank "Mundo_01" {

  music "intro_theme" {
    file: "audio/music/intro.ogg"
    loop: true
    volume: 0.8
    fadeIn: 2s
  }

  effect "paso_madera" {
    file: "audio/sfx/paso_madera.wav"
    volume: 1.0
    pitch: 1.0
    randomPitch: 0.1
    spatial: true
  }

  snapshot "transicion_combate" {
    duck: "ambiente", factor: 0.7
    fadeIn: 0.5s
    fadeOut: 0.8s
  }
}