bank combate_inicia {
  stop("tema_menu", fadeOut: 2s)
  play("tema_batalla", loop: true, fadeIn: 1.5s)
  duck("ambiente", factor: 0.6)
  wait(3s)
  play("fx_espada_impacto", randomPitch: true)
}

bank victoria {
  stop("tema_batalla")
  delay(0.5s)
  play("tema_victoria")

  if flag("jefe_final") {
    play("voz_final")
    play("ambiente_glorioso", fadeIn: 2s)
  }
}